{
    "name": "davidlienhard/i18n",
    "license": "proprietary",
    "description": "ðŸ˜ php library to use for internationalization",
    "keywords": [ "internationalization", "i18n", "php", "library" ],
    "type": "libary",
    "homepage": "https://github.com/davidlienhard/i18n/",
    "authors": [
        {
            "name": "David Lienhard",
            "email": "david.lienhard@tourasia.ch",
            "homepage": "http://www.tourasia.ch/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/davidlienhard/i18n/issues/",
        "email": "david.lienhard@tourasia.ch"
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3",
        "dancryer/php-docblock-checker": "^1",
        "phpstan/phpstan": "^0.12.68"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "scripts": {
        "changed-files": "git diff --name-only origin/master",
        "phpdoccheck": "./vendor/bin/phpdoccheck",
        "phpdoccheck-diff": "@composer changed-files | xargs ls -d 2>/dev/null | ./vendor/bin/phpdoccheck --from-stdin",
        "phpcs": "./vendor/bin/phpcs",
        "phpcs-diff": "@composer changed-files | xargs ls -d 2>/dev/null | xargs ./vendor/bin/phpcs",
        "phpstan": "./vendor/bin/phpstan analyse",
        "test": [
            "@phpdoccheck",
            "@phpcs"
        ]
    }
}
